{{#section 'css'}}
    <link rel="stylesheet" href="/css/manager.css">
{{/section}}

<div class="container pt-5 pb-5">
    <div class="row">
    <div class="col-lg-3">
        <p>Tài khoản của <span class="font-weight-bold">{{layoutVM.curUser.f_Name}}</span></p>
        <ul class="list-group">
            <li class="list-group-item">
                <a href="/account/profile" class="text-dark">
                    <i class="fa fa-user-circle fa-lg" aria-hidden="true"></i>
                    <span>Thông tin tài khoản</span>
                </a>
            </li>
            <li class="list-group-item list-group-item-secondary">
                <a href="/account/history" class="text-dark">
                    <i class="fa fa-history fa-lg" aria-hidden="true"></i>
                    <span>Quản lý đơn hàng</span>
                </a>
            </li>
        </ul>
    </div>
    <div class="col-lg-9">
        {{#if items}}
        {{#each items}}
        <div class="border bg-white mb-2 py-3">
            <div class="row mx-0 mb-0">
                <div class="col-5 col-md-3">
                    <p class="my-0 text-secondary">Đơn hàng</p>
                    <p class="my-0 text-primary">#{{OrderID}}</p>
                </div>
                <div class="col-5 col-md-3">
                    <p class="my-0 text-secondary">Ngày mua</p>
                    <p class="my-0">{{OrderDate}}</p>
                </div>
            </div>
            <hr/>
            <div class="row mx-0 mb-0">
                <div class="col">
                    <p class="mb-0 text-secondary">Tên: {{f_Name}}</p>
                    <p class="mb-0 text-secondary">Địa chỉ: {{Address}}</p>
                    <p class="mb-0 text-secondary">Điện thoại: {{Phone}}</p>
                </div>
            </div>
            <hr/>
            <div class="row mx-0 py-3 d-none d-md-flex align-items-center bg-light">
                <div class="col-md-2 text-secondary">Sản phẩm</div>
                <div class="col-md-4 text-secondary">&nbsp;</div>
                <div class="col-md-2 text-secondary">Giá</div>
                <div class="col-md-2 text-secondary">Số lượng</div>
                <div class="col-md-2 text-secondary">Tạm tính</div>
            </div>
            {{#each item}}
            <div class="row mx-0 py-3 d-flex align-items-center">
                <div class="col-md-2 text-center">
                    <a href="/product/detail/{{ProID}}">
                        <img class="img-fluid" src="/{{getImageThumbMain Image}}" width="75%" height="75%">
                    </a>
                </div>
                <div class="col-md-4">
                    <a class="text-dark" href="/product/detail/{{ProID}}">{{ProName}}</a>
                </div>
                <div class="col-md-2">
                    <span class="text-right">{{number_format Price}} đ</span><span class="d-md-none text-danger font-weight-bold"> x {{O_Quantity}}</span>
                </div>
                <div class="col-md-2">
                    <span class="text-right d-none d-md-block">{{O_Quantity}}</span>
                </div>
                <div class="col-md-2">
                    <span class="text-secondary d-md-none">Tạm tính </span><span class="text-right text-danger">{{number_format Amount}} đ</span>
                </div>
            </div>
            {{/each}}
            <hr/>
            <div class="row justify-content-end mx-0 mb-0">
                <div class="col-md-2 text-secondary">Tổng cộng</div>
                <div class="col-md-2 text-danger font-weight-bold">{{number_format Total}} đ</div>
            </div>
        </div>
        {{/each}}
        {{else}}
        <div class="border bg-white mb-2 py-3">
            <div class="row mx-0 mb-0">
                <div class="col text-center">
                    <p>Không có đơn hàng nào của bạn.</p>
                    <button class="btn btn-danger"><a class="text-white" href="/">Tiếp tục mua sắm</a></button>
                </div>
            </div>
        </div>
        {{/if}}
        
    </div>
</div>
</div>
