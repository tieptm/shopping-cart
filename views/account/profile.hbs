    <link rel="stylesheet" type="text/css" href="/assets/bootstrap-datepicker/css/bootstrap-datepicker3.min.css">
    
{{/section}}

{{#section 'js'}}
    {{!-- <script>
        document.getElementsByClassName("container")[0].className = "container-fluid m-0";
    </script> --}}

    <script src="/assets/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>

    <script type="text/javascript">
            $('#txtDOB').datepicker({
            format:'d/m/yyyy',
            autoclose:true
            });
    </script>

    <script type="text/javascript">
    function kiemTraUpdate(){
        if(frmProfile.name.value=="" || frmProfile.email.value=="" || frmProfile.dob.value==""){
            alert('Vui lòng nhập đầy đủ thông tin');
            return false;
        }
        if (document.getElementById("changepw").checked){
            if(frmProfile.new_password.value==""){
                alert('Vui lòng nhập password mới.')
            }
            if(frmProfile.new_password.value!=frmProfile.re_new_password.value){
                alert('Password không trùng khớp')
            }
        }
        return true;
    }
    </script>

    <script type="text/javascript">
    function kiemTra(){
        var kiemTra=document.getElementById("frm");
        if (document.getElementById("changepw").checked){
            kiemTra.style.display="block";
        }
        else{
            kiemTra.style.display="none";
        }
    };
</script>

{{/section}}

{{#if showError}}
<div class="alert alert-info">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <strong>Title!</strong> {{errorMsg}}
</div>
{{/if}}

<div class="container pt-5 pb-5">
    <div class="row">
        <div class="col-lg-3">
            <p>Tài khoản của <span class="font-weight-bold">{{layoutVM.curUser.f_Name}}</span></p>
            <ul class="list-group">
                <li class="list-group-item list-group-item-secondary">
                    <a href="/account/profile" class="text-dark">
                        <i class="fa fa-user-circle fa-lg" aria-hidden="true"></i>
                        <span>Thông tin tài khoản</span>
                    </a>
                </li>
                <li class="list-group-item">
                    <a href="/account/history" class="text-dark">
                        <i class="fa fa-history fa-lg" aria-hidden="true"></i>
                        <span>Quản lý đơn hàng</span>
                    </a>
                </li>
            </ul>
        </div>
        <div class="col-lg-9">
            <form class="bg-white py-3 mb-3" id="frmProfile" action="" method="POST" role="form">

                    {{!-- <div class="form-group col-md-8">
                        <label for="inputUserName">Tên đăng nhập</label>
                        <input type="text" class="form-control" id="inputUserName" name="username" value="{{layoutVM.curUser.f_Username}}" aria-describedby="firstNameHelpBlock" readonly >
                    </div> --}}
                    <div class="form-group col-md-8">
                        <label for="inputFullName">Họ Tên</label>
                        <input type="text" class="form-control" id="inputFullName" name="name" value="{{layoutVM.curUser.f_Name}}" aria-describedby="lastNameHelpBlock">
                    </div>
                    <div class="form-group col-md-8">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" name="email" value="{{layoutVM.curUser.f_Email}}">
                    </div>
                    <div class="form-group col-md-8">
                        <label for="txtDOB">Ngày Sinh</label>
                        <input type="text" class="form-control" id="txtDOB" data-format="yyyy-MM-dd" value="{{layoutVM.curUser.f_DOB}}" name="dob">
                    </div> 

                    <div class="changePW col" id="frmMKM">
                        <input type="checkbox" id="changepw" class="mb-3" name="changepw" value="checked" onclick="kiemTra()"> Thay đổi password
                        <div id="frm" class="password-group" style="display: none;">
                            <div class="form-group col-md-8 px-0">
                                <label class="control-label" for="new-password">Mật khẩu mới</label>
                                <div class="input-wrap">
                                    <input type="password" name="new_password" class="form-control" id="new_password" value="" autocomplete="off" placeholder="Mật khẩu từ 6 đến 32 ký tự">
                                    <span class="help-block"></span>
                                </div>
                            </div>
                            <div class="form-group col-md-8 px-0">
                                <label class="control-label" for="re_new_password">Nhập lại mật khẩu</label>
                                <div class="input-wrap">
                                    <input type="password" name="re_new_password" class="form-control" id="re_new_password" value="" autocomplete="off" placeholder="Nhập lại mật khẩu mới">
                                    <span class="help-block"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <input type="hidden" class="form-control" name="id" value="{{layoutVM.curUser.f_ID}}">
                        <button type="submit" class="btn btn-warning" role="button" onclick="return kiemTraUpdate()">Cập nhật</button>
                    </div>
            </form>
            {{!-- Liên kết mạng xã hội
            <ul class="list-group">
                <li class="list-group-item">
                    <a href="#">
                        <i class="fa fa-facebook social"></i>
                    </a>
                    <span class="font-weight-bold">Facebook</span>
                </li>
