{{#with Product}}
<form action="" method="POST" role="form">
	<div class="form-group">
		<input type="hidden" class="form-control" id="" name="ProID" value="{{ProID}}" readonly>
	</div>
	<div class="form-group">
		<label for="">Tên sản phẩm</label>
		<input type="text" class="form-control" id="" name="ProName" value="{{ProName}}" placeholder="Tên sản phẩm">
	</div>
	{{!-- <div class="form-group">
		<label for="">Hình sản phẩm</label>
		<input type="file" class="form-control-file" id="" name="ProImage" accept="image/png, image/jpeg">
	</div> --}}
	<div class="form-group">
		<label for="">Giá</label>
		<input type="text" class="form-control" id="" name="Price" value="{{Price}}" placeholder="10.000">
	</div>
	<div class="form-group">
		<label for="">Mô tả</label>
		{{!-- <input type="textarea" class="form-control" id="" name="Description" value="{{Description}}" placeholder="Mô tả sản phẩm"> --}}
		<textarea class="form-control" aria-label="With textarea" name="Description" placeholder="Mô tả sản phẩm">{{Description}}</textarea>
	</div>
	<div class="form-group">
		<label for="">Danh mục</label>
		<select class="form-control" name="category" id="category">
			<option value="{{CatID}}" hidden="hidden" selected="selected">{{CatName}}</option>
			<option value="1">Đồng hồ nam</option>
			<option value="2">Đồng hồ nữ</option>
			<option value="3">Đồng hồ cặp đôi</option>
			<option value="4">Đồng hồ trẻ em</option>
		</select>
	</div>
	<div class="form-group">
		<label for="">Thương hiệu</label>
		<select class="form-control" name="brand" id="brand">
			<option value="{{BrandID}}" hidden="hidden" selected="selected">{{BrandName}}</option>
			<option value="1">Casio</option>
			<option value="2">Citizen</option>
			<option value="3">Seiko</option>
			<option value="4">Fossil</option>
			<option value="5">Daniel Wellington</option>
			<option value="6">Tissot</option>
		</select>
	</div>
	<div class="form-group">
		<label for="">Xuất xứ</label>
		<input type="text" class="form-control" id="" name="xuatxu" value="{{Xuatxu}}" placeholder="Nhật Bản">
	</div>
	<div class="form-group">
		<label for="">Màu sắc</label>
		<input type="text" class="form-control" id="" name="mausac" value="{{Color}}" placeholder="Xanh navy">
	</div>
	<div class="form-group">
		<label for="">Loại máy</label>
		<select class="form-control" name="loaimay" id="loaimay">
			<option value="{{Loaimay}}" hidden="hidden" selected="selected">{{Loaimay}}</option>
			<option value="Máy cơ">Máy cơ</option>
			<option value="Máy pin">Máy pin</option>
		</select>
	</div>
	<div class="form-group">
		<label for="">Loại kính</label>
		<select class="form-control" name="loaikinh" id="loaikinh">
			<option value="{{Loaikinh}}" hidden="hidden" selected="selected">{{Loaikinh}}</option>
			<option value="Kính khoáng (Mineral)">Kính khoáng (Mineral)</option>
			<option value="Kính Acrylic (thủy tinh hữu cơ)">Kính Acrylic (thủy tinh hữu cơ)</option>
			<option value="Kính Sapphire">Kính Sapphire</option>
			<option value="G-shock">G-shock</option>
		</select>
	</div>
	<div class="form-group">
		<label for="">Loại vỏ</label>
		<select class="form-control" name="loaivo" id="loaivo">
			<option value="{{Loaivo}}" hidden="hidden" selected="selected">{{Loaivo}}</option>
			<option value="Kim loại">Kim loại</option>
			<option value="Nhựa">Nhựa</option>
			<option value="Đá">Đá</option>
		</select>
	</div>
	<div class="form-group">
		<label for="">Loại dây</label>
		<select class="form-control" name="loaiday" id="loaiday">
			<option value="{{Loaiday}}" hidden="hidden" selected="selected">{{Loaiday}}</option>
			<option value="Dây da">Dây da</option>
			<option value="Dây kim loại">Dây kim loại</option>
			<option value="Dây Silicon">Dây Silicon</option>
		</select>
	</div>
	<div class="form-group">
		<label for="">Bảo hành</label>
		<input type="text" class="form-control" id="" name="baohanh" value="{{Baohanh}}" placeholder="12 tháng">
	</div>
	<a class="btn btn-outline-secondary" href="/admin/product" role="button">
		<i class="fa fa-arrow-left" aria-hidden="true"></i>
		Danh sách sản phẩm
	</a>
	<button type="submit" class="btn btn-success">
		<i class="fa fa-check" aria-hidden="true"></i>
		Cập nhật
	</button>
</form>
{{/with}}