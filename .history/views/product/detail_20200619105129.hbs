    <script>
        $(".btn-down").click(function(){
            var value = parseInt($("#qty").attr('value'));
            var min = parseInt($("#qty").attr('min'));
            if (value > min) {
                value--;
                $("#qty").attr('value', value);
            }
        });

        $(".btn-up").click(function(){
            var value = parseInt($("#qty").attr('value'));
            var max = parseInt($("#qty").attr('max'));
            if (value < max) {
                value++;
                $("#qty").attr('value', value);
            }
        });

        $(document).ready(function(){
