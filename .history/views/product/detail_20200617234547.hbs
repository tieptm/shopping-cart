{{#section 'css'}}
<link rel="stylesheet" type="text/css" href="/css/detail.css"> 
{{/section}}
  
{{#section 'js'}}
    <script src="https://unpkg.com/js-image-zoom@0.4.1/js-image-zoom.js" type="application/javascript"></script>

    <script>
        $(".btn-down").click(function(){
            var value = parseInt($("#qty").attr('value'));
            var min = parseInt($("#qty").attr('min'));
            if (value > min) {
                value--;
                $("#qty").attr('value', value);
            }
        });

        $(".btn-up").click(function(){
            var value = parseInt($("#qty").attr('value'));
            var max = parseInt($("#qty").attr('max'));
            if (value < max) {
                value++;
                $("#qty").attr('value', value);
            } //
        });

        
    </script>
    
{{/section}}



<div class="row mx-0">
    <div class="col">
        <div>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/home" class="text-primary">Trang chủ</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="/product/byCat/{{category.CatID}}">{{category.CatName}}</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">{{product.ProName}}</li>
            </ol>
        </div>
    </div>
</div>

<div class="container">
    <div class="row product">
        <div class="col-md-6 col-12" >
            <div id="img-container-zoom">
                <img src="/{{product.Image}}" class="img-fluid" style="border: 1px solid #d3d3d3;" alt="{{product.ProName}}">
            </div>
        </div>
        
        <script>
        var options = {
            width: 400,
            zoomWidth: 500,
            offset: { vertical: 0, horizontal: 10 }
        };

        new ImageZoom(document.getElementById("img-container-zoom"), options);

        </script>
        
        
        
        <div class="col-md-6 detail col-12 pt-2 pb-2">
            <h1 class="title">
                {{product.ProName}}
            </h1>
            <p class="brand">
                <a href="/product/byBrand/{{brand.BrandID}}">THƯƠNG HIỆU: {{brand.BrandName}}</a>
            </p>
            <p class="price">
                <span class="main-price">
                    {{number_format product.Price}}đ
                </span>
            
            </p>
            {{!-- <p class="view">Số lượt xem: {{product.Viewer}}</p> --}}
            <p class="sold">Còn lại: {{product.Quantity}} sản phẩm</p>
            <table class="product-detail" style="width: 428.253px;">
                <tbody>
                    <tr>
                        <td>Thương hiệu:</td>
                        <td>{{brand.BrandName}}</td>
                    </tr>
                    <tr>
                        <td>Xuất xứ:</td>
                        <td>{{product.Xuatxu}}</td>
                    </tr>
                    <tr>
                        <td>Loại máy:</td>
                        <td>{{product.Loaimay}}</td>
                    </tr>
                    <tr>
                        <td>Loại kính</td>
                        <td>{{product.Loaikinh}}</td>
                    </tr>
                    <tr>
                        <td>Loại vỏ</td>
                        <td>{{product.Loaivo}}</td>
                    </tr>
                    <tr>
                        <td>Loại dây:</td>
                        <td>{{product.Loaiday}}</td>
                    </tr>
                    <tr>
                        <td>Màu sắc:</td>
                        <td>{{product.Color}}</td>
                    </tr>
                    <tr>
                        <td>Thời gian bảo hành:</td>
                        <td>{{product.Baohanh}} tháng</td>
                    </tr>
                </tbody>
            </table>
            <form class="add-to-cart" id="frmAddItem" method="post" action="/checkout/add">
                    <input name="proID" type="hidden" value="{{product.ProID}}">
                <div class="quantity-col">
                    <p class="quantity-label">
                        Số lượng:
                    </p>
                    <div class="btn-group" role="group">
                        <button class="btn btn-light btn-down" type="button">-</button>
                        <input id="qty" type="tel" name="quantity" value="1" min="1" max="{{product_available}}" class="form-control input-quantity" style="display: block;">
                        <button class="btn btn-light btn-up" type="button">+</button>
                    </div>
                </div>
                <div class="cart-box">
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-cart-plus" aria-hidden="true"></i>
                        Thêm vào giỏ hàng</button>
                </div>
            </form>
        </div>
    </div>

