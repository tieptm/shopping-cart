{{#section 'css'}}
    <link rel="stylesheet" href="/css/manager.css">
{{/section}}

{{#section 'js'}}
    <script>
        document.getElementsByClassName("container")[0].className = "container-fluid m-0";
    </script>
{{/section}}

<div class="container pt-5 pb-5">
    <div class="row">
    <div class="col-md-2">
        <div>Chào bạn<span style="display: block;" class="font-weight-bold">{{layoutVM.curUser.f_Name}}</span></div>
        <ul class="dropdown-menu menu">
            <li class="active">
                <a href="/account/profile">
                    <i class="fa fa-user-circle fa-lg" aria-hidden="true"></i>
                    <span>Thông tin tài khoản</span>
                </a>
            </li>
            <li>
                <a href="/checkout">
                    <i class="fa fa-shopping-cart fa-lg" aria-hidden="true"></i>
                    <span>Quản lý giỏ hàng</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="fa fa-map-marker fa-lg" aria-hidden="true"></i>&nbsp;&nbsp;
                    <span>Địa chỉ thanh toán</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="fa fa-credit-card-alt" aria-hidden="true"></i>
                    <span>Thông tin thanh toán</span>
                </a>
            </li>
            <li>
                <a href="/account/history">
                    <i class="fa fa-history fa-lg" aria-hidden="true"></i>&nbsp;
                    <span>Lịch sử mua hàng</span>
                </a>
            </li>
        </ul>
    </div>
    <div class="col-md-10">
        {{#each items}}
        <div class="border bg-white mb-2">
            <div class="row mx-0 mb-0 bg-white pt-3">
                <div class="col">
                    <p class="text-primary">Đơn hàng #{{OrderID}}</p>
                    <p style="font-size: 12px;">Ngày đặt hàng {{OrderDate}}</p>
                </div>
            </div>
            <hr/>
            <div class="row mx-0 py-3 d-flex align-items-center">
                <div class="col-2">
                    Sản phẩm
                </div>
                <div class="col-4">
                    &nbsp;
                </div>
                <div class="col-2">
                    Giá
                </div>
                <div class="col-2">
                    Số lượng
                </div>
                <div class="col-2">
                    Tạm tính
                </div>
            </div>
            {{#each item}}
            <div class="row mx-0 d-flex align-items-center">
                <div class="col-2 text-center">
                    <a href="/product/detail/{{ProID}}">
                        <img class="img-fluid" src="/{{Image}}" width="75%" height="75%">
                    </a>
                </div>
                <div class="col-4">
                    <a href="/product/detail/{{ProID}}">{{ProName}}</a>
                </div>
                <div class="col-2">
                    <span class="text-right">{{number_format Price}}
                        <strong>đ</strong>
                    </span>
                </div>
                <div class="col-2">
                    <span class="text-right">{{Quantity}}
                    </span>
                </div>
                <div class="col-2">
                    <span class="text-right">{{number_format Amount}}
                        <strong>đ</strong>
                    </span>
                </div>
            </div>
            {{/each}}
        </div>
        {{/each}}
    </div>
</div>
</div>
